<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/background_gradient" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="230dp"
        android:id="@+id/layoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="#FFF"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/poppinsmedium"
            android:text="UST Domain E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="#797777"
            android:textSize="12.7sp"
            android:fontFamily="@font/poppinsregular"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_email"
            android:hint="patriciamae.ramos.iics@ust.edu.ph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Mobile Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="#797777"
            android:textSize="15sp"
            android:fontFamily="@font/poppinsregular"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_phone"
            android:hint="09152133209"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/contbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bgbtn"
            android:text="REGISTER"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/poppinsregular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.898" />
        <TextView
            android:layout_marginTop="25dp"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinsmedium"
            android:text="We are practicing Single sign-on authentication. One account per device is allowed."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="93dp"
        android:layout_marginRight="93dp"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="top|center"
        android:text="CREATE YOUR ACCOUNT"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp" />

    <com.layer_net.stepindicator.StepIndicator
        android:id="@+id/step_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        app:siBackgroundColor="@color/colorPrimaryDark"
        app:siStepColor="@color/colorPrimary" />


    <ImageView
        android:id="@+id/imageVIew"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tjicon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"/>

</RelativeLayout>